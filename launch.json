{
    "version": "0.2.0",
    "configurations": [

        {
            // Debug npm
            "type": "node",
            "request": "launch",
            "name": "npm compile v2",
            "protocol": "inspector",
            "runtimeExecutable": "node",
            "args": ["./scripts/web/browserify", "-x", "-w", "v2"],
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },

        {
            // Debug npm
            "type": "node",
            "request": "launch",
            "name": "npm run test:node",
            "protocol": "inspector",
            "runtimeExecutable": "node",
            "runtimeArgs": ["scripts/web/mocha.js", "v1"],
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },

        {   // works with npm tool chrome-debug (start it on a page then enable this)
            // note: doesn't work with sourcemaps on minified bundles' (missing sourceRoot perhaps?)
            "type": "chrome",
            "request": "attach",

            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceRoot}",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "*": "${webRoot}/*"
            }
        }
    ]
}
